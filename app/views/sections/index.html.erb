<h1>Sections</h1>

<ul>
  <% @sections.each do |section| %>
    <li><a href="/sections/<%= section.id %>/edit"><%= section.name %></a>
      <% section.lessons.each do |lesson| %>
        <ul><li><a href ="/lessons/<%=lesson.id %>"><%= lesson.name %></a></li></ul>
      <% end %>
    </li>
  <% end %>
</ul>

<p><a href="/sections/new">Create a new section</a></p>


